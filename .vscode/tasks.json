{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Image",
            "type": "shell",
            "command": "docker pull lacledeslan/gamesvr-tf2classic; docker build . -f linux.Dockerfile -t ll/gamesvr-tf2classic-freeplay --no-cache --build-arg BUILDNODE=$env:computername;",
            "dependsOn": "Download git submodules",
            "group": "build",
            "problemMatcher": [],
            "promptOnClose": true
        },
        {
            "label": "Build & Execute Self Tests",
            "type": "shell",
            "command": "docker run -it --rm ll/gamesvr-tf2classic-freeplay ./ll-tests/gamesvr-tf2classic-freeplay.sh;",
            "dependsOn": "Build Image",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [],
            "promptOnClose": true
        },
        {
            "label": "Build & Run Interactive Server",
            "type": "shell",
            "command": "docker run -it --net=host ll/gamesvr-tf2classic-freeplay ./srcds_run -game tf2classic +map ctf_2fort -insecure -norestart +sv_lan 1 +rcon_password \"test123\";",
            "dependsOn": "Build Image",
            "group": "build",
            "problemMatcher": [],
            "promptOnClose": true
        },
        {
            "label": "Build & Shell In",
            "type": "shell",
            "command": "docker run -it --net=host --rm ll/gamesvr-tf2classic-freeplay;",
            "dependsOn": "Build Image",
            "group": "build",
            "problemMatcher": [],
            "promptOnClose": true
        },
        {
            "label": "Download git submodules",
            "type": "shell",
            "command": "git submodule foreach git pull origin master;",
            "problemMatcher": [],
            "promptOnClose": true
        },
        {
            "label": "Update git submodules",
            "type": "shell",
            "command": "git submodule update --recursive --remote;",
            "problemMatcher": [],
            "promptOnClose": true
        }
    ]
}
